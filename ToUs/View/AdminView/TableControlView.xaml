<UserControl
    x:Class="ToUs.View.AdminView.TableControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:customcontrol="clr-namespace:ToUs.Resources.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ToUs.View.AdminView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:ToUs.ViewModel.AdminViewModel"
    HorizontalAlignment="Left"
    d:DesignWidth="2500"
    Style="{StaticResource Page_Style}"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewmodel:TableControlViewModel />
    </UserControl.DataContext>

    <ScrollViewer
        Width="1740"
        Height="1080"
        HorizontalAlignment="Right"
        Background="Transparent">

        <Grid>

            <Grid.RowDefinitions>

                <RowDefinition Height="auto" />

                <RowDefinition Height="167*" />
                <RowDefinition Height="179*" />
            </Grid.RowDefinitions>

            <Grid
                x:Name="GridHeader"
                Grid.Row="0"
                Margin="46,95,0,0">

                <TextBlock
                    Height="81"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    SnapsToDevicePixels="True"
                    Style="{StaticResource TextHeader}"
                    Text="BẢNG ĐIỀU KHIỂN" />

                <StackPanel
                    HorizontalAlignment="Right"
                    FlowDirection="RightToLeft"
                    Orientation="Horizontal">

                    <!--<Ellipse Height="75"
                             Width="75"
                             VerticalAlignment="Top">

                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resources/Images/open-folder.png" />
                        </Ellipse.Fill>
                    </Ellipse>-->

                    <StackPanel>

                        <TextBlock
                            x:Name="TextDateTime"
                            Height="24"
                            MaxWidth="304"
                            HorizontalAlignment="Right"
                            FontSize="18"
                            Foreground="{StaticResource FifthForegroundColor}"
                            Style="{StaticResource txtPrimary}" />

                        <TextBlock SnapsToDevicePixels="True" TextAlignment="Right"><Run Style="{StaticResource txtHeader1}" Text="Chào mừng " /><Run Text=" " /><Run
                                Foreground="#665D8C"
                                Style="{StaticResource txtHeader1}"
                                Text="Trí " /><Run Text=" " /><Run Style="{StaticResource txtHeader1}" Text="đã đến với " /><Run Text=" " /><Run
                                Foreground="#665D8C"
                                Style="{StaticResource txtHeader1}"
                                Text="ToUs!" /></TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="GridSettings"
                Grid.Row="1"
                Grid.RowSpan="2"
                Margin="46,32,43,34">

                <Grid.RowDefinitions>

                    <RowDefinition Height="*" />

                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Settings  -->

                <StackPanel Orientation="Horizontal">

                    <StackPanel>

                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            FontSize="45"
                            Style="{StaticResource TextHeader}"
                            Text="Thiết Lập" />

                        <Border
                            x:Name="BorderInfor"
                            Width="750"
                            Height="400"
                            Style="{StaticResource BorderStyle}">

                            <StackPanel Margin="33.55,38,34,37" HorizontalAlignment="Center">

                                <Button
                                    Width="285"
                                    Height="75"
                                    HorizontalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    Background="{StaticResource PrimaryColor}"
                                    Command="{Binding LoadExcelCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}">

                                    <StackPanel Orientation="Horizontal">

                                        <Icon:PackIconMaterial
                                            x:Name="IconListBox"
                                            Width="36"
                                            Height="36"
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            Foreground="{StaticResource FifthPrimaryColor}"
                                            Kind="Upload" />

                                        <TextBlock
                                            x:Name="textBlock"
                                            Margin="37,0,23,0"
                                            VerticalAlignment="Center"
                                            FontSize="30"
                                            Foreground="{StaticResource FifthPrimaryColor}"
                                            Text="Tải file excel" />

                                        <ContentPresenter VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>

                                <TextBlock
                                    Margin="5,14,0,0"
                                    FontSize="25"
                                    Foreground="{StaticResource SixthForegroundColor}"
                                    Style="{StaticResource txtHeader2}"
                                    Text="Đã tải lên file thoikhoabieu.xls thành công!" />

                                <TextBlock
                                    Margin="5,36,0,0"
                                    FontSize="30"
                                    Foreground="{StaticResource ThirdForegroundColor}"
                                    Style="{StaticResource txtHeader2}"
                                    Text="Danh sách file Đã tải: " />

                                <ScrollViewer>

                                    <ItemsControl
                                        x:Name="ListFileExcelName"
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                        ItemsSource="{Binding Paths, UpdateSourceTrigger=PropertyChanged}"
                                        SnapsToDevicePixels="True">

                                        <ItemsControl.Resources>

                                            <Style TargetType="{x:Type ItemsControl}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsScale, RelativeSource={RelativeSource AncestorType={x:Type Window}}, UpdateSourceTrigger=PropertyChanged}" Value="True">

                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="Width"
                                                                        From="1515"
                                                                        To="1461"
                                                                        Duration="0:0:0.3" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>

                                                        <DataTrigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="Width"
                                                                        From="1461"
                                                                        To="1515"
                                                                        Duration="0:0:0.3" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ItemsControl.Resources>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>

                                                <Grid x:Name="gridItemControl" Margin="0,4,0,0">

                                                    <Border
                                                        Width="602.9"
                                                        Height="38"
                                                        Background="#61A84E"
                                                        CornerRadius="10">

                                                        <TextBlock
                                                            Margin="13,0,0,0"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            FontSize="25"
                                                            Foreground="{StaticResource FifthPrimaryColor}"
                                                            Style="{StaticResource txtHeader2}"
                                                            Text="{Binding Path, UpdateSourceTrigger=PropertyChanged}"
                                                            TextWrapping="Wrap" />
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>

                                        <ItemsControl.ItemsPanel>

                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel
                        Width="750"
                        Margin="130,0,0,0"
                        HorizontalAlignment="Right">

                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            FontSize="45"
                            Style="{StaticResource TextHeader}"
                            Text="Thêm thủ công" />

                        <Border
                            x:Name="BorderAddSubject"
                            Width="750"
                            Height="400"
                            Style="{StaticResource BorderStyle}">

                            <!--<StackPanel Margin="33,35,26.4,15" HorizontalAlignment="Center">

                                <StackPanel Orientation="Horizontal">

                                    <TextBlock
                                        Margin="0,0,52,0"
                                        HorizontalAlignment="Left"
                                        FontSize="32"
                                        FontWeight="Normal"
                                        Style="{StaticResource TextHeader}"
                                        Text="Mã lớp" />

                                    <TextBox
                                        Width="401"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource TextBoxStyle}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">

                                    <TextBlock
                                        Margin="0,0,1,0"
                                        HorizontalAlignment="Left"
                                        FontSize="32"
                                        FontWeight="Normal"
                                        Style="{StaticResource TextHeader}"
                                        Text="Giảng viên" />

                                    <TextBox
                                        Width="401"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource TextBoxStyle}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">

                                    <TextBlock
                                        Margin="0,0,13,0"
                                        HorizontalAlignment="Left"
                                        FontSize="32"
                                        FontWeight="Normal"
                                        Style="{StaticResource TextHeader}"
                                        Text="Thứ - Tiết" />

                                    <TextBox
                                        Width="96"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource TextBoxStyle}" />

                                    <TextBox
                                        Width="96"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource TextBoxStyle}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">

                                    <TextBlock
                                        Margin="0,0,75,0"
                                        HorizontalAlignment="Left"
                                        FontSize="32"
                                        FontWeight="Normal"
                                        Style="{StaticResource TextHeader}"
                                        Text="Hệ" />

                                    <ComboBox
                                        x:Name="ComboBoxSemester"
                                        Width="100"
                                        Margin="43,0,0,0"
                                        Background="Transparent"
                                        FontSize="20"
                                        Foreground="{StaticResource FifthForegroundColor}"
                                        ItemsSource="{Binding ShortStringList}"
                                        Style="{StaticResource MaterialDesignOutlinedComboBox}" />
                                </StackPanel>

                                <Grid>

                                    <Button
                                        Width="50"
                                        Height="50"
                                        HorizontalAlignment="Left"
                                        materialDesign:ButtonAssist.CornerRadius="25"
                                        Background="{StaticResource PrimaryColor}"
                                        Command="{Binding LoadExcelCommand}"
                                        Style="{StaticResource MaterialDesignRaisedButton}">

                                        <Icon:PackIconMaterial
                                            Width="18"
                                            Height="25"
                                            Background="Transparent"
                                            Foreground="{StaticResource FifthPrimaryColor}"
                                            Kind="Plus" />
                                    </Button>

                                    <Button
                                        Width="140"
                                        Height="50"
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Right"
                                        materialDesign:ButtonAssist.CornerRadius="10"
                                        Background="{StaticResource PrimaryColor}"
                                        Command="{Binding CreateTableCommand}"
                                        Style="{StaticResource MaterialDesignRaisedButton}">

                                        <StackPanel Orientation="Horizontal">

                                            <Icon:PackIconMaterial
                                                Width="36"
                                                Height="36"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                Panel.ZIndex="100"
                                                Background="Transparent"
                                                Foreground="{StaticResource FifthPrimaryColor}"
                                                Kind="ContentSave" />

                                            <TextBlock
                                                Margin="5,0,23,0"
                                                VerticalAlignment="Center"
                                                FontSize="30"
                                                Foreground="{StaticResource FifthPrimaryColor}"
                                                Text="Lưu" />

                                            <ContentPresenter VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </StackPanel>-->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="140" />
                                </Grid.ColumnDefinitions>

                                <!--  Add Button  -->
                                <Grid Grid.Column="1">
                                    <Button
                                        Width="100"
                                        Height="100"
                                        Margin="0,133"
                                        Padding="0"
                                        VerticalAlignment="Top"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Command="{Binding OpenAddManualCommand}"
                                        Cursor="Hand">
                                        <Grid>
                                            <Ellipse
                                                Width="100"
                                                Height="100"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Fill="{StaticResource FifthForegroundColor}" />
                                            <Icon:PackIconMaterial
                                                Width="40"
                                                Height="40"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="{StaticResource FifthPrimaryColor}"
                                                Kind="Plus" />
                                        </Grid>
                                    </Button>

                                    <TextBlock
                                        Margin="0,240,0,120"
                                        FontSize="26"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource FifthForegroundColor}"
                                        Text="Thêm"
                                        TextAlignment="Center" />
                                </Grid>

                                <!--  Edit Button  -->
                                <Grid Grid.Column="3">
                                    <Button
                                        Width="100"
                                        Height="100"
                                        Margin="0,133"
                                        Padding="0"
                                        VerticalAlignment="Top"
                                        Background="Transparent"
                                        BorderBrush="Transparent">
                                        <Grid>
                                            <Ellipse
                                                Width="100"
                                                Height="100"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Fill="{StaticResource FifthForegroundColor}" />
                                            <Icon:PackIconMaterial
                                                Width="40"
                                                Height="40"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="{StaticResource FifthPrimaryColor}"
                                                Kind="Pencil" />
                                        </Grid>
                                    </Button>

                                    <TextBlock
                                        Margin="0,240,0,120"
                                        FontSize="26"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource FifthForegroundColor}"
                                        Text="Sửa"
                                        TextAlignment="Center" />
                                </Grid>

                                <!--  Delete Button  -->
                                <Grid Grid.Column="5">
                                    <Button
                                        Width="100"
                                        Height="100"
                                        Margin="0,133"
                                        Padding="0"
                                        VerticalAlignment="Top"
                                        Background="Transparent"
                                        BorderBrush="Transparent">
                                        <Grid>
                                            <Ellipse
                                                Width="100"
                                                Height="100"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Fill="{StaticResource ErrorForegroundColor}" />
                                            <Icon:PackIconMaterial
                                                Width="40"
                                                Height="40"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="{StaticResource FifthPrimaryColor}"
                                                Kind="TrashCan" />
                                        </Grid>
                                    </Button>

                                    <TextBlock
                                        Margin="0,240,0,120"
                                        FontSize="26"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource ErrorForegroundColor}"
                                        Text="Xóa"
                                        TextAlignment="Center" />
                                </Grid>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!--  List Of Subjects  -->

                <StackPanel Grid.Row="1" Margin="0,32,0,0">

                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="45"
                        Style="{StaticResource TextHeader}"
                        Text="DANH SÁCH CÁC LỚP ĐÃ THÊM THỦ CÔNG" />

                    <Border
                        Grid.Row="1"
                        Height="766"
                        MaxWidth="1673"
                        Background="{StaticResource FifthPrimaryColor}"
                        CornerRadius="35">

                        <DataGrid
                            x:Name="ExcelTimetableDataGrid"
                            Margin="20,24,20,0"
                            CellStyle="{DynamicResource DataGridCellStyle}"
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle}"
                            ItemsSource="{Binding DataRowsView, UpdateSourceTrigger=PropertyChanged}"
                            RowStyle="{DynamicResource DataGridRowStyle}"
                            Style="{DynamicResource DataGridStyle}">

                            <DataGrid.Columns>

                                <!--  Môn  -->

                                <DataGridTemplateColumn
                                    Width="280"
                                    Header="Môn học"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>

                                        <DataTemplate>
                                            <TextBlock
                                                Margin="30,0,0,0"
                                                Style="{StaticResource TextDataGrid}"
                                                Text="{Binding Subject.Name}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="Wrap" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Mã lớp  -->

                                <DataGridTemplateColumn
                                    MinWidth="270"
                                    Header="Mã lớp"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>

                                        <DataTemplate>

                                            <StackPanel Orientation="Horizontal">

                                                <!--<CheckBox
                                                    x:Name="ckbClassId"
                                                    Margin="50,0,30,0"
                                                    materialDesign:CheckBoxAssist.CheckBoxSize="45"
                                                    Click="CkbClassIdClick_HandleEvent"
                                                    IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />-->
                                                <!--<CheckBox.Triggers />-->

                                                <TextBlock
                                                    Margin="20,0,0,0"
                                                    Style="{StaticResource TextDataGrid}"
                                                    Text="{Binding Class.ClassId}"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Giảng viên  -->

                                <DataGridTemplateColumn
                                    MinWidth="280"
                                    Header="Giảng viên"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>

                                        <DataTemplate>

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource TextDataGrid}"
                                                Text="{Binding TeacherStr.Name}"
                                                TextTrimming="CharacterEllipsis" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Số TC  -->

                                <DataGridTemplateColumn
                                    MinWidth="120"
                                    Header="Tín chỉ"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource TextDataGrid}"
                                                Text="{Binding Subject.NumberOfDigits}"
                                                TextTrimming="CharacterEllipsis" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Thứ  -->

                                <DataGridTemplateColumn
                                    MinWidth="80"
                                    Header="Thứ"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>

                                        <DataTemplate>

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource TextDataGrid}"
                                                Text="{Binding Class.DayInWeek}"
                                                TextTrimming="CharacterEllipsis" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Tiết  -->

                                <DataGridTemplateColumn
                                    MinWidth="80"
                                    Header="Tiết"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>

                                        <DataTemplate>

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource TextDataGrid}"
                                                Text="{Binding Class.Lession}"
                                                TextTrimming="CharacterEllipsis" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Hệ ĐT  -->

                                <DataGridTemplateColumn
                                    MinWidth="106"
                                    Header="Hệ ĐT"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>

                                        <DataTemplate>

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource TextDataGrid}"
                                                Text="{Binding Class.System}"
                                                TextTrimming="CharacterEllipsis" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Khoa QL  -->

                                <DataGridTemplateColumn
                                    MinWidth="100"
                                    Header="Khoa"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>

                                        <DataTemplate>

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource TextDataGrid}"
                                                Text="{Binding Subject.FacultyId}"
                                                TextTrimming="CharacterEllipsis" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  HTDG  -->

                                <DataGridTemplateColumn
                                    MinWidth="108"
                                    Header="HTDG"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>

                                        <DataTemplate>

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource TextDataGrid}"
                                                Text="{Binding Subject.HTGD}"
                                                TextTrimming="CharacterEllipsis" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Cách tuần  -->

                                <DataGridTemplateColumn
                                    MinWidth="165"
                                    Header="Cách tuần"
                                    IsReadOnly="True">

                                    <DataGridTemplateColumn.CellTemplate>

                                        <DataTemplate>

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource TextDataGrid}"
                                                Text="{Binding Class.Frequency}"
                                                TextTrimming="CharacterEllipsis" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>