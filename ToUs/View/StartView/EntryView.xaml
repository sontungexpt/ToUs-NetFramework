                    Width="230.25"
                    Height="60"
                    Margin="1360,0,0,0"
                    Padding="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Stretch"
                    Panel.ZIndex="112"
                    Background="Transparent"
                    BorderBrush="Transparent">

                    <Grid Grid.Column="2" Margin="32,0,-32,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <!--  ICON BACK  -->
                        <Icon:PackIconMaterial
                            Grid.Column="0"
                            Width="28"
                            Height="25"
                            Margin="10,8,10,3"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="#665D8C"
                            Kind="ArrowLeft" />

                        <!--  TEXT BACK  -->
                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="32"
                            FontWeight="Regular"
                            Foreground="#665D8C"
                            Text="Quay lại" />
                    </Grid>

                    <Button.Triggers>

                        <EventTrigger RoutedEvent="Button.Click">

                            <BeginStoryboard>

                                <Storyboard>

                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="about_us" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                                        <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1000" />
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
