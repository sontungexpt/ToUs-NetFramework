<UserControl x:Class="ToUs.View.StartView.AuthenticateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToUs.View.StartView"
             mc:Ignorable="d" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             xmlns:customcontrol="clr-namespace:ToUs.Resources.CustomControl"
             xmlns:viewmodel="clr-namespace:ToUs.ViewModel.StartViewModel"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             FontFamily="Segoe UI">

    <UserControl.DataContext>
        
        <viewmodel:AuthenticateViewModel/>
        
    </UserControl.DataContext>

    <UserControl.Resources>
        <ScaleTransform x:Key="windowScaleTransform" ScaleX="0.62" ScaleY="0.62"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Border x:Name="Background"
                Width="1920"
                Height="1080"
                CornerRadius="30"
                LayoutTransform="{StaticResource windowScaleTransform}"
                Background="#665D8C" 
                HorizontalAlignment="Left">

            <Grid>

                <!--Define Grid Row & Height-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <!--LOGO-->
                <Grid x:Name="Big_Logo">
                    <TextBlock Name="Logo"
                               Text="ToUs"
                               FontSize="144"
                               FontWeight="Bold"
                               Foreground="#F2AEBB"
                               Margin="328,381"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top">

                    </TextBlock>
                </Grid>

                <!--SUB BACKGROUND-->
                <Grid x:Name="Sub_Background">
                    <Rectangle Name="SubBackground"
                               Fill="#F5F5F5"
                               Width="686"
                               Height="1080"
                               Margin="984,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top">

                    </Rectangle>
                </Grid>

                <!--BACK BUTTON-->
                <Grid x:Name="Back_Button">
                    <Button x:Name="Back"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Width="230.25"
                            Height="60"
                            Margin="80,867"
                            Padding="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Stretch">

                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--ICON BACK-->
                            <Icon:PackIconMaterial Grid.Column="0"
                                                   Kind="ArrowLeft"
                                                   Width="31.5"
                                                   Height="31.5"
                                                   Foreground="#F5F5F5"
                                                   Margin="10 0 0 0"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center">

                            </Icon:PackIconMaterial>

                            <!--TEXT BACK-->
                            <TextBlock Grid.Column="1" 
                                       Foreground="#F5F5F5"
                                       Text="Quay lại"
                                       FontSize="45"
                                       FontWeight="Regular"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center">

                            </TextBlock>
                        </Grid>
                    </Button>
                </Grid>

                <!--THIS IS SIGN IN-->
                <Border x:Name="SignIn"
                Background="Transparent"
                Width="686"
                Height="1080"
                Margin="984,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">

                    <Grid>
                        <!--SignIn Title-->
                        <Grid x:Name="SignIn_Title">
                            <TextBlock x:Name="SignInTitle"
                               Text="Đăng nhập"
                               Foreground="#665D8C"
                               FontSize="40"
                               FontWeight="Bold"
                               Margin="240,156,240,871">
                            </TextBlock>
                        </Grid>

                        <!--Input Section-->
                        <Grid x:Name="Input_Section">
                            <customcontrol:TextBoxPlaceHolder Width="450"
                                                      Height="70"
                                                      Margin="0,230,0,0"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Top"
                                                      TextInput="{Binding UsernameSignIn, UpdateSourceTrigger=PropertyChanged}"
                                                      Title="Nhập tài khoản"
                                                      
                                                      Error="{Binding UsernameSignInErrorMessage, UpdateSourceTrigger=PropertyChanged}"/>

                            <customcontrol:TextBoxPlaceHolder Width="450"
                                                      Height="70"
                                                      Margin="0,315,0,0"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Top"
                                                      Password="{Binding PasswordSignIn, UpdateSourceTrigger=PropertyChanged}"
                                                      Error="{Binding PasswordSignInErrorMessage, UpdateSourceTrigger=PropertyChanged}"
                                                      Title="Nhập mật khẩu"
                                                      isPassword="True"/>

                            <Button x:Name="PassForgotten"
                            Width="126.25"
                            Height="22.5"
                            Margin="442,390,118,652"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Padding="0"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderBrush="Transparent">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="16.88"
                                       Text="Quên mật khẩu?"
                                       FontWeight="SemiBold"
                                       Foreground="#665D8C">

                                    </TextBlock>
                                </StackPanel>


                            </Button>
                        </Grid>

                        <!--Next Button-->
                        <Grid x:Name="Next_Button_SI">
                            <Button x:Name="Next_SI"
                            Background="#534B72"
                            Width="80"
                            Height="80"
                            materialDesign:ButtonAssist.CornerRadius="20"
                            BorderBrush="Transparent"
                            Margin="303,468"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center">
                                <Icon:PackIconMaterial Kind="ArrowRight"
                                               Width="30"
                                               Height="30"
                                               Foreground="#FFFFFF">

                                </Icon:PackIconMaterial>

                            </Button>
                        </Grid>

                        <!--Bottom Section-->
                        <Grid x:Name="Bottom_Section">
                            <TextBlock Text="Chưa có tài khoản?"
                               Foreground="#666666"
                               FontSize="18"
                               FontWeight="Regular"
                               Margin="228.5,849,305.5,207"/>

                            <Button Width="68.4"
                            Height="24"
                            Margin="390.2,849,227.4,207"
                            BorderBrush="Transparent"
                            Background="Transparent"
                            Padding="0"
                            HorizontalContentAlignment="Stretch">
                                <TextBlock FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#665D8C">
                            <Underline> Đăng ký </Underline>
                                </TextBlock>
                            </Button>

                            <TextBlock Foreground="#666666"
                               FontSize="18"
                               FontWeight="Regular"
                               Margin="324,885,324,171">
                        <Italic> hoặc </Italic>
                            </TextBlock>

                            <TextBlock Text="tham gia ngay ở chế độ"
                               Foreground="#666666"
                               FontSize="18"
                               FontWeight="Regular"
                               Margin="221,921,276,135"/>

                            <Button Width="52.8"
                            Height="24"
                            Margin="413,921,220.2,135"
                            BorderBrush="Transparent"
                            Background="Transparent"
                            Padding="0"
                            HorizontalContentAlignment="Stretch">
                                <TextBlock FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#665D8C">
                            <Underline> Khách </Underline>
                                </TextBlock>
                            </Button>
                        </Grid>

                    </Grid>

                </Border>

            </Grid>

        </Border>

    </Grid>

</UserControl>
